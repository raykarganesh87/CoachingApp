<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:orientation="vertical" 
    android:padding="16dp"> 
 
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Coaching Management App" 
        android:textSize="24sp" 
        android:textStyle="bold" 
        android:layout_marginBottom="20dp" /> 
 
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Student Management System" 
        android:textSize="18sp" 
        android:layout_marginBottom="20dp" /> 
 
    <Button 
        android:id="@+id/btnStudents" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:text="Manage Students" 
        android:layout_marginBottom="10dp" /> 
 
    <Button 
        android:id="@+id/btnCourses" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:text="Manage Courses" 
        android:layout_marginBottom="10dp" /> 
 
    <Button 
        android:id="@+id/btnAttendance" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:text="Attendance Tracking" 
        android:layout_marginBottom="10dp" /> 
 
</LinearLayout> 
